<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    tools:context="com.tocel.patrol.biz.ui.HeartActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/img_bl"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bl"
                    />


                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/wifi"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/img_gps"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gps"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:text="11:48"
                    android:textColor="@color/color_text"
                    android:textSize="30px"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/color_text"
                    android:textSize="130px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15px"
                        android:text="BPM"
                        android:textColor="@color/color_text"
                        android:textSize="25sp"/>

                    <ImageView
                        android:layout_width="32px"
                        android:layout_height="32px"
                        android:src="@mipmap/heart"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Heart Rate"
                android:textColor="@color/color_text"
                android:textSize="30px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/img_talk"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10px"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_bg_inspection_result_rec"
                    />


                <TextView
                    android:id="@+id/tv_helper"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10px"
                    android:background="@drawable/tv_shap"
                    android:text="SOS"
                    android:gravity="center"
                    android:textSize="70sp"
                    />

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/set"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
